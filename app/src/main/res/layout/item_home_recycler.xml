<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/dark_blue"
    app:cardCornerRadius="@dimen/margin_8"
    android:padding="@dimen/margin_8"
    android:layout_margin="@dimen/margin_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4"
        android:background="@color/light_blue">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="@dimen/margin_8"
            android:backgroundTint="@color/dark_blue"
            android:padding="10dp"
            android:layout_marginStart="@dimen/margin_8"
            >
            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_8"
                android:text="123456"
                android:textSize="@dimen/text_16" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="@dimen/margin_8"
            android:backgroundTint="@color/white"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_8"
                android:text="ECOFOUND"
                android:textSize="@dimen/text_16" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="@dimen/margin_8"
            android:backgroundTint="@color/red"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_16"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_8"
                android:text="O'rta"
                android:textSize="12sp"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_project"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:fontFamily="@font/alegreya_sc"
            android:text="CleantCityAbonentda oxirgi Play marketda releasega chiqarilgan versiyani Gitga push qilinmagan. Va oldingi versiyadan yangi versiya chiqarilganda Conflick yuzaga kelgan, Play consoledan oldingi versiyani qaytarib turish." />

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@id/description"
            >
            <ImageView
                android:id="@+id/calendar"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="@dimen/margin_16"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/calendar"
                android:text="12.12.2022.12:12"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/clock"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_toStartOf="@id/hour"
                android:src="@drawable/ic_clock" />

            <TextView
                android:id="@+id/hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_24"
                android:text="4 soat"
                android:textSize="14sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/margin_12"
                android:scaleType="centerCrop"
                android:src="@drawable/image_person"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp"
                app:civ_circle_background_color="@color/white"
                />
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numanov Xojiakbar"
                android:layout_marginStart="@dimen/margin_4"
                />

        </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>