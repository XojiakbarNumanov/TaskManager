<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="controller"
            type="com.xojiakbar.taskmanager.fragments.home_fragment.HomeUIController" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.home_fragment.HomeFragment">

        <com.thanh.ha.piechart.PieChart
            android:id="@+id/pie_chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:itemTextColor="@color/white"
            app:pieStrokeWidth="30dp"
            app:initAngle="120"
            app:shadowAlpha="0.2"
            app:animateDirection="clockwise"
            app:shadowDx="0dp"
            app:shadowDy="10dp"
            app:shadowRadius="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
